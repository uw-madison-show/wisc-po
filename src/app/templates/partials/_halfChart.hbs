<div class="col-xs-12 col-md-6 chartContainer">
  <nav role="navigation" class="navbar navbar-default chartSelect">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" data-target="#dataCollapse" data-toggle="collapse" class="navbar-toggle">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand">Chart {{num}}</span>
    </div>

    <!-- Collection of nav links and other content for toggling -->
    <div id="dataCollapse" class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <li {{#if bar}} class="active" {{/if}} data-type="bar" data-toggle="pill">
          <a href="#">Bar Chart</a>
        </li>
        <li {{#if line}} class="active" {{/if}} data-type="line" data-toggle="pill">
          <a href="#">Line Chart</a>
        </li>
        <li {{#if map}} class="active" {{/if}} data-type="map" data-toggle="pill">
          <a href="#">Map</a>
        </li>
        <li>
          <a data-toggle="dropdown" href="#">Dropdown <b class="caret"></b></a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li><a href="#">Var 1</a></li>
              <li><a href="#">Var 2</a></li>
              <li><a href="#">Var 3</a></li>
              <li><a href="#">Var 4</a></li>
              <li><a href="#">Var 5</a></li>
            </ul>
        </li>
      </ul>
    </div>
  </nav>

  <div class="chart col-xs-12"></div>
</div>